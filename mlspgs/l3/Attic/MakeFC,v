# "$Id: MakeFC,v 1.3 2001/01/10 23:45:34 pwagner Exp $"
d84 14
a97 14
	@@case "$(PVM_ROOT)" in \
		"") \
		echo "Preparing mlsl3 without PVM support" ; \
		rm -f $(PLATFORMS)/PVM_OBJS.inc ; \
		echo "#   PVM_OBJS.inc  (included in l3 Makefile)" > $(PLATFORMS)/PVM_OBJS.inc ; \
		echo "PVM_OBJS=" >> $(PLATFORMS)/PVM_OBJS.inc ; \
		;; \
		*) \
		echo "Preparing mlsl3 with PVM support" ; \
		rm -f $(PLATFORMS)/PVM_OBJS.inc ; \
		echo "#   PVM_OBJS.inc  (included in l3 Makefile)" > $(PLATFORMS)/PVM_OBJS.inc ; \
		echo "PVM_OBJS=" >> $(PLATFORMS)/PVM_OBJS.inc ; \
		;; \
	esac 
