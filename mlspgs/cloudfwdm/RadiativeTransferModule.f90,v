      use Blackbody, only: planck
      use Interpack, only: LOCATE
      use Units     
d47 5
a51 2
      use MLSCommon, only: r8
      IMPLICIT NONE
d407 1
a407 1
       "$Id: RadiativeTransferModule.f90,v 1.18 2007/07/25 21:50:34 vsnyder Exp $"
