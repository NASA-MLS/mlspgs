log
@Moved link macros here from targets.h to simplify latter
@
text
@#$MLSF95.$MLSPLAT -- a file full of macros to be included by a Makefile
#to compile a Fortran 9x program or library

# "$Id: Sun.Sun,v 1.3 2009/08/24 20:27:02 pwagner Exp $"
ifndef USEMYFC
FC = f95
endif

DUSTY = $(FOPTS)

GC_IN_LDOPTS := $(shell echo ${LDOPTS} | grep '\-gc')
ifeq ($(GC_IN_LDOPTS),)
BAD_MATCH=-gc
else
BAD_MATCH=no -gc
endif

# How to prefix search paths for include and .mod files
PATH_OPTS=--set -d -prefixn=-M --set -d -prefixn=-I - 

# Some macros needed to link successfully
hdf5_linker_line=-L${HDF5} -lhdf5_fortran -lhdf5 -R${HDF5}
hdfeos5_linker_line=-L${HDFEOS5} -lhe5_hdfeos

