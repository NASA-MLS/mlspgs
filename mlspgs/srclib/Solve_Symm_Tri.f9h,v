! subroutine Solve_Symm_Tri ( DIAG, H, Z, B )

    ! Solve A b = z all at once -- don't return the factors.
    ! DIAG(1:n) is the diagonal of A
    ! H(1:n-1) is the super- and subdiagonal, H(n) is the corner
    ! Z(1:n) is the RHS
    ! B(1:n) is output

    real(rk), intent(in) :: DIAG(:), H(:), Z(:)
    real(rk), intent(out) :: B(:) ! Solution, temporarily solution of L y = z

    real(rk), dimension(size(diag))   :: D ! Inverse of diagonal of L
                                           ! Subdiagonal of L is H(1:n-1)
    real(rk), dimension(size(diag)-2) :: U ! Superdiagonal of U
                                           ! Diagonal of U is 1

    integer :: K, N

    n = size(diag)

    ! LU factor A and solve L y = z
    d(1) = 1.0 / diag(1)
    b(1) = z(1) * d(1)
    do k = 2, n
      u(k-1) = h(k-1) * d(k-1)
      d(k) = 1.0 / ( diag(k) - h(k-1) * u(k-1) )
      b(k) = ( z(k) - h(k-1) * b(k-1) ) * d(k)
    end do

    ! Solve U b = z
    do k = n-1, 1, -1
      b(k) = b(k) - u(k) * b(k+1)
    end do

! end subroutine Solve_Symm_Tri

! $Id: Solve_Symm_Tri.f9h,v 1.1 2009/11/18 00:07:12 vsnyder Exp $

! $Log: Solve_Symm_Tri.f9h,v $
! Revision 1.1  2009/11/18 00:07:12  vsnyder
! Bodies for Symm_Tri
!
@


1.1
log
@Bodies for Symm_Tri
@
text
@d21 1
a21 1
    real(rk), intent(out) :: B(:)
d24 2
a25 3
                                           ! Subdiagonal of L is H(1:n-2)
                                           !   and R(n-1)
    real(rk), dimension(size(diag)-1) :: Y ! Solution of L y = z
a26 1
    real(rk), dimension(size(diag)-2) :: U ! Superdiagonal of U
d34 2
a35 2
    y(1) = z(1) * d(1)
    do k = 2, n-1
d38 1
a38 1
      y(k) = ( z(k) - h(k-1) * y(k-1) ) * d(k)
a41 1
    b(n) = ( z(n) - h(n-1) * y(n-1) ) * d(n) ! y(n), if we had computed it
d43 1
a43 1
      b(k) = y(k) - u(k) * b(k+1)
d48 1
a48 1
! $Id: $
d50 4
a53 1
! $Log: $
@

