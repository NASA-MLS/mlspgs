a6 1
!ifdef(band, ,!define(band,{6U}))
d41 2
d123 2
a124 2
!define(_x,x)
!define(_b,b)
d163 1
a163 1
    output, file='!outpath/l2pc_band!band_v1.0-lowres.dat', quantities=K, $
