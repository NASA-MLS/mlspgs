changequote({,})
define(l2cfinc,{
;@@0 $1
builtin(include,$1)
;@@__line__ __file__})
define({forloop},
            {pushdef({$1}, {$2})_forloop({$1}, {$2}, {$3}, {$4})popdef({$1})})
     define({_forloop},
            {$4{}ifelse($1, {$3}, ,
     		   {define({$1}, incr($1))_forloop({$1}, {$2}, {$3}, {$4})})})
