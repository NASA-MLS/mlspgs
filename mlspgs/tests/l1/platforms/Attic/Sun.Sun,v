1.3
log
@compiler-specific pieces removed from platforms directory
@
text
@#Makefile.mac -- a file full of macros to be included by a Makefile
#to compile a Fortran 9x program or library

# "$Id: Sun.Sun,v 1.2 2004/12/14 23:31:51 pwagner Exp $"

# Path to source files:
S = ..

CONFDIR=../../..

# Use the libmls.a directory, libdir, for .mod files
# dir1 is the path prepended to its .o files in dependency lists
libdir = $(CONFDIR)/lib/$(MLSCONFG)

dir1 = $(libdir)/

# sources shared by l2, l3 are in $(srclib)
# these USE init_tables_module, which is different for l2 from the l3 version
# while l2 and l3 use the same sources in srclib they do
# require different objects--thus a source library instead of an object
# library (such as libmls.a)
# therefore we will tell make to add srclib to directories searched for .f90
# while dir2, the path prepended to its .o files in dependency lists, is empty
# so that its object files share the current working directory with those of l2
srclib = $(CONFDIR)/srclib

# This is the directory name from which we will get init_tables_module
# (either l1, l2, or l3)
init_m_dir = l1

itmdir=$(CONFDIR)/$(init_m_dir)/$(MLSCONFG)

dir2 = $(itmdir)/

# Use the libmlspack.a directory, blaslib, for .mod files
blaslib = $(CONFDIR)/blas/$(MLSCONFG)

# Set paths for finding source files (different from .o and .mod)

vpath %.o ./
vpath %.f90 ../ $(srclib)
vpath %.f9h ../ $(srclib)
vpath %.f ../
vpath %.c ../

FC = f95

DUSTY = $(FOPTS) -dusty

# All the paths to supply .mod and INCLUDE files used in compiling %.f90
# Precede each path by "-I" . Don't put spaces between "-I" and the path
# Same goes for "-M" for module paths.
INC_PATHS = $(EXTRA_PATHS) \
  -I$(PGSINC) -I$(srclib) -I$S -I$(libdir) -I$(itmdir) -I$(blaslib) \
  -M$(PGSINC) -M$(srclib) -M$S -M$(libdir) -M$(itmdir) -M$(blaslib)

# Define some suffix rules

.SUFFIXES:
.SUFFIXES: .o .dbg.o .f90 .f .c
.f90.o:
	$(FC) -c $(FOPTS) $(INC_PATHS) $< $(FAFTER)

.f90.dbg.o:
	$(FC) -c $(FOPTS) $(INC_PATHS) $< -o $*.dbg.o $(FAFTER)

.f.o:
	$(FC) -c $(FOPTS) $(INC_PATHS) $< $(FAFTER)

.c.o:
	$(CC) -c ${INC_PATHS} -DNAGf90Fortran $<

#Special load libraries
l_specials = -lnsl

# $Log: Sun.Sun,v $
# Revision 1.2  2004/12/14 23:31:51  pwagner
# Made blas available for compiling, mlspack for linking
#
# Revision 1.1  2001/09/10 20:36:02  pwagner
# First commit
#
@


1.2
