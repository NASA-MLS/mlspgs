# "$Id: Sun.Sun,v 1.1 2001/09/10 20:36:02 pwagner Exp $"
d50 7
d72 7
a78 6
INC_PATHS = $(EXTRA_PATHS) \
 -I$(PGSINC) -I$(srclib) -I$S -I$(libdir) -I$(itmdir) -I$(fwdmdldir) \
 -I$(clouddir) -I$(blaslib)\
 -M$(PGSINC) -M$(srclib) -M$S -M$(libdir) -M$(itmdir) -M$(fwdmdldir) \
 -M$(clouddir) -M$(blaslib)
	 
