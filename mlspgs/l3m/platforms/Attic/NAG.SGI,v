1.8
log
@compiler-specific pieces removed from platforms directory
@
text
@#a file full of macros to be included by a Makefile
#to compile a Fortran 9x program or library

# "$Id: NAG.SGI,v 1.7 2005/08/17 17:46:42 pwagner Exp $"

SHELL = /bin/sh

# Path to source files:
S = ..
# Path to root directory of l2, lib, etc.:
CONFDIR=../..

UTILDIR=../../util

# reecho.sh can filter out globbed file expansions that fail
# e.g., '*.f90 *.f' -> '*.f90" if there aren't any .f files
# However we will be using it just to create lapack_linker_line 
# where LIB_LAPACK may contain multiple libraries
REECHO=$(UTILDIR)/reecho.sh

# Use the libmls.a directory, libdir, for .mod files
# dir1 is the path prepended to its .o files in dependency lists
libdir = $(CONFDIR)/lib/$(MLSCONFG)

dir1 = $(libdir)/

# Use the libmlspack.a directory, blaslib, for .mod files
blaslib = $(CONFDIR)/blas/$(MLSCONFG)

# Set paths for finding source files (different from .o and .mod)

vpath %.mod ./
vpath %.o ./
vpath %.f90 ../
vpath %.f9h ../
vpath %.f ../
vpath %.c ../

FC = f95

DUSTY = $(FOPTS) -dusty

# Use the libmlsl3 directory, libmlsl3dir, for more .mod files
# dir2 is the path prepended to its .o files in dependency lists
libmlsl3dir = $(CONFDIR)/l3/$(MLSCONFG)

#dir3 = $(libmlsl3dir)/
dir2 = $(libmlsl3dir)/

# All the paths to supply .mod and INCLUDE files used in compiling %.f90
# Precede each path by "-I "
PATHS_PREFXD := $(shell ${REECHO} -d -prefix=-I $(UNPREFXDPTHS))
INC_PATHS = $(EXTRA_PATHS) $(PATHS_PREFXD) \
 -I $(PGSINC) -I $S -I $(libdir) -I $(libmlsl3dir) -I $(blaslib)

# Define some suffix rules

.SUFFIXES:
.SUFFIXES: .o .dbg.o .f90 .f .c
.f90.o:
	$(FC) -c $(FOPTS) $(INC_PATHS) $< $(FAFTER)

.f90.dbg.o:
	$(FC) -c $(FOPTS) $(INC_PATHS) $< -o $*.dbg.o $(FAFTER)

.f.o:
	$(FC) -c $(FOPTS) $(INC_PATHS) $< $(FAFTER)

.c.o:
	$(CC) -c ${INC_PATHS} -DNAGf90Fortran $<

#Special load libraries
l_specials = -lnsl

# $Log: NAG.SGI,v $
# Revision 1.7  2005/08/17 17:46:42  pwagner
# INC_PATHS expanded to include blaslib
#
# Revision 1.6  2002/08/22 23:33:05  pwagner
# Made ready for hdf5
#
# Revision 1.5  2002/07/15 23:12:15  pwagner
# Dropped srclib from path searched for source files
#
# Revision 1.4  2002/07/01 17:32:22  pwagner
# No longer compiles some sources twice
#
# Revision 1.3  2002/06/21 00:16:43  pwagner
# Enroute to ending cascading recompiles
#
# Revision 1.2  2001/08/15 21:03:28  pwagner
# Default rules for .f and .c; EXTRA_PATHS added to INC_PATHS
#
# Revision 1.1  2001/07/19 23:59:48  pwagner
# Fiest commit
#
@


