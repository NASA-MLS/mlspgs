\vspace{-10pt}
\begin{tabbing}
\phantom{References: }\= \\
To: \>Van\\
Subject: \>Recurrences for functions related to $J_\nu(z)$, $Y_\nu(z)$\\
From: \>Van Snyder\\
\end{tabbing}

\parindent 0pt \parskip 6pt
\vspace{-10pt}

Start with the asymptotic expansions for $J_\nu(z)$ and $Y_\nu(z)$ as $\nu
\rightarrow \infty$ (9.3.1-2) in [1]):
%
\begin{equation}\begin{split}
J_\nu(z) \sim\,& \frac1{\sqrt{2\pi\nu}} \left(\frac{z}2\right)^\nu
\left(\frac{e}{\nu}\right)^\nu \\
Y_\nu(z) \sim\,& -\sqrt{\frac2{\pi\nu}} \left(\frac2z\right)^\nu
\left(\frac{\nu}e\right)^\nu\,&
\end{split}\end{equation}
%
and get a value for $\left(\frac{\nu}e\right)^\nu$ using Stirling's
approximation for $\Gamma(\nu)$, \emph{viz.}
%
\begin{equation}
\Gamma(\nu) \sim \sqrt{\frac2{\pi\nu}} \left(\frac{\nu}e\right)^\nu
\end{equation}
%
to give new functions
%
\begin{equation}\begin{split}
\tilde{J}_\nu(z) =\,& \Gamma(\nu+1) \left(\frac2z\right)^\nu J_\nu(z)\\
\tilde{Y}_\nu(z) =\,& -\frac{\pi}{\Gamma(\nu)} \left(\frac{z}2\right)^\nu Y_\nu(z)\,.
\end{split}\end{equation}
%
These functions follow the recurrences
%
\begin{equation}\begin{split}
\tilde{J}_\nu(z) =\,& \tilde{J}_{\nu-1}(z) +
                  \frac{z^2}{4\nu(\nu+1)} \tilde{J}_{\nu+1}(z)\\
\tilde{Y}_\nu(z) =\,& \frac{z^2}{4\nu(\nu-1)} \tilde{Y}_{\nu-1}(z) +
                  \tilde{Y}_{\nu+1}(z)\,.
\end{split}\end{equation}
%
From 9.1.7 and 9.1.9 in [1], for $\nu$ fixed, \emph{viz.}
%
\begin{equation}\begin{split}
\lim_{z \rightarrow 0}
J_\nu(z) \sim\,& \left(\frac{z}2\right)^\nu \frac1{\Gamma(\nu+1)},\,\,
         \nu \neq -1,\, -2,\, \dots\\
\lim_{z \rightarrow 0}
Y_\nu(z) \sim\,& -\frac{\Gamma(\nu)}\pi \left(\frac2z\right)^\nu,
\end{split}\end{equation}
%
we have for $\nu$ fixed
%
\begin{equation}\begin{split}
\lim_{z \rightarrow 0} \tilde{J}_\nu(z) =\,& 1,\,\, \nu \neq -1,\, -2,\, \dots\\
\lim_{z \rightarrow 0} \tilde{Y}_\nu(z) =\,& 1,\,\, \nu > 0\,.
\end{split}\end{equation}
%
By construction for $z$ fixed we have
\begin{equation}\begin{split}
\lim_{\nu \rightarrow \infty} \tilde{J}_\nu(z) = \frac1\pi\\
\lim_{\nu \rightarrow \infty} \tilde{Y}_\nu(z) = \pi.
\end{split}\end{equation}

{\bf References}

[1] Milton Abramowitz and Irene A. Stegun (Eds.), {\bf Handbook of Mathematical
Functions}, Applied Mathematics Series 55, U. S. National Bureau of Standards
(1972).

