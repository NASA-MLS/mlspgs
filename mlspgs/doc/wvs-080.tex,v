\begin{equation*}
\frac{\partial\overline{P_s}(\theta)}{\partial x} =
  \frac1{\int_{-\pi}^\pi P_s(\theta) \sin\theta \, \text{d}\theta}
  \left(\frac{\partial P_s(\theta)}{\partial x}
  - \overline{P_s}(\theta)
      \int_{-\pi}^\pi \frac{\partial P_s(\theta)}{\partial x}
     \sin\theta \, \text{d}\theta
  \right)
\end{equation*}
