\clearpage


\subsection{Temperature Second Derivative}


\begin{eqnarray*}
\frac{\partial^2 \triangle \delta_{i \rightarrow i-1}^k}{\partial f_q^T \partial f_{\tilde{q}}^T}
&=& \frac{\partial}{\partial f_{\tilde{q}}^T} \int_{\zeta_i}^{\zeta_{i-1}} \Bigg\{ F^{k} \beta^k \, \frac{n^k}{T} \, \eta_q^T(\zeta) \, \frac{ds}{dh} \, \frac{dh}{d\zeta} \\
&& + F^{k} \beta^k \frac{ \displaystyle 2(h+H^{\oplus})^2 \frac{\partial h}{\partial f_q^T} - 3(h_t+H^{\oplus})^2 \frac{\partial h }{\partial f_q^T} + (h+H^{\oplus})(h_t+H^{\oplus})\frac{\partial h_t}{\partial f_q^T}  }{ \Big( (h+H^{\oplus})^2-(h_t+H^{\oplus})^2 \Big)^{\frac{3}{2}} } \, \frac{dh}{d\zeta} \\
&& + F^{k} \beta^k \, \frac{\eta_q^T(\zeta)}{T}  \frac{ds}{dh} \, \frac{dh}{d\zeta} \, \Bigg\} \, d\zeta \\
\ \\
\ \\
&=& \int_{\zeta_i}^{\zeta_{i-1}} \Bigg\{ \frac{\partial}{\partial f_{\tilde{q}}^T} \bigg[ F^{k} \beta^k \, \frac{n^k}{T} \, \eta_q^T(\zeta) \, \frac{ds}{dh} \, \frac{dh}{d\zeta} \bigg] d\zeta \\
&& + \frac{\partial}{\partial f_{\tilde{q}}^T}  \Bigg[ F^{k} \beta^k \frac{ \displaystyle 2(h+H^{\oplus})^2 \frac{\partial h}{\partial f_q^T} - 3(h_t+H^{\oplus})^2 \frac{\partial h }{\partial f_q^T} + (h+H^{\oplus})(h_t+H^{\oplus})\frac{\partial h_t}{\partial f_q^T}  }{ \Big( (h+H^{\oplus})^2-(h_t+H^{\oplus})^2 \Big)^{\frac{3}{2}} } \, \frac{dh}{d\zeta} \Bigg] \\
&& + \frac{\partial}{\partial f_{\tilde{q}}^T}  \bigg[ F^{k} \beta^k \, \frac{\eta_q^T(\zeta)}{T}  \frac{ds}{dh} \, \frac{dh}{d\zeta} \bigg] \, \Bigg\} \ d\zeta \\
\end{eqnarray*}

%\end{comment}


\clearpage


\subsection{The Planck Radiation Function Derivative}


\subsubsection{Analytical Expression for the Source Function Derivative for Temperature}

The Planck radiation function $B$ expressed in temperature units is given by
\begin{eqnarray*}
B(\zeta) \ = \ \frac{\vh \nu}{k \big[ \exp\big( \frac{\vh \nu}{k T(\zeta)} \big) - 1 \big]},
\end{eqnarray*}
or, in discrete form
\begin{eqnarray*}
B_i \ = \ \frac{\vh \nu}{k \big[ \exp\big( \frac{\vh \nu}{k T_i} \big) - 1 \big]},
\end{eqnarray*}
where $\vh$ is Planck's constant, $k$ is Boltzmann's constant, $\nu$ is the radiation frequency, and $T$ is temperature. The derivative of $B$ with respect to $\zeta$ can be approximated by
\begin{eqnarray*}
\frac{dB}{d\zeta} \ \approx \ \frac{\triangle B}{\triangle \zeta}.
\end{eqnarray*}
The differential source function can be approximated as $dB \approx \triangle B$:
\begin{eqnarray*}
\triangle B_1 &=& \frac{B_1 + B_2}{2}, \\
\triangle B_i &=& \frac{B_{i+1} - B_{i-1}}{2}, \\
\triangle B_{2N} &=& I_0 - \frac{B_{2N-1} + B_{2N}}{2},
\end{eqnarray*}
where $I_0 = 2.7$ is the background cosmic radiance incident on the atmosphere. Note that $\displaystyle \sum_{i=1}^{2N} \triangle B_i = I_0$. \\
The source function Jacobian for temperature is
\begin{equation}
\frac{\partial \triangle B_i}{\partial f_q^T} \ = \ \frac{ \displaystyle \frac{\partial B_{i+1}}{\partial f_q^T} - \frac{\partial B_{i-1}}{\partial f_q^T}}{2},
\end{equation}
where
\begin{eqnarray*}
\frac{\partial B_i}{\partial f_q^T} &=& -\frac{\vh \nu}{k \big[ \exp\big( \frac{\vh \nu}{k T_i} \big) - 1 \big]^2} \cdot \frac{- \vh \nu}{k T_i^2} \exp\Big( \frac{\vh \nu}{k T_i} \Big) \, \eta_q^T(\zeta_i) \\
&=& \frac{B_i^2 \exp\big( \frac{\vh \nu}{k T_i} \big)}{T_i^2} \, \eta_q^T(\zeta_i).
\end{eqnarray*}


\subsubsection{Approximation of the Source Function Derivative for Temperature}


The Planck radiation function $B$ can be approximated by $T$:
\begin{eqnarray*}
B(\zeta) \ = \ \frac{\vh \nu}{k \big[ \exp\big( \frac{\vh \nu}{k T(\zeta)} \big) - 1 \big]} \ \approx \ T(\zeta).
\end{eqnarray*}
Hence,
\begin{eqnarray*}
\triangle B_1 &=& \frac{T_1 + T_2}{2}, \\
\triangle B_i &=& \frac{T_{i+1} - T_{i-1}}{2}, \\
\triangle B_{2N} &=& T_{space} - \frac{T_{2N-1} + T_{2N}}{2},
\end{eqnarray*}
where $T_{space} = 2.7$. Since $\displaystyle \frac{\partial T(\zeta)}{\partial f_q^T} = \eta_q^T(\zeta)$, the source function Jacobian for temperature can be approximated by
\begin{eqnarray*}
\frac{\partial \triangle B_1}{\partial f_q^T} &=& \frac{ \eta_q^T(\zeta_{1}) + \eta_q^T(\zeta_{2})}{2}, \\
\frac{\partial \triangle B_i}{\partial f_q^T} &=& \frac{ \eta_q^T(\zeta_{i+1}) - \eta_q^T(\zeta_{i-1})}{2}, \\
\frac{\partial \triangle B_{2N}}{\partial f_q^T} &=& -\frac{ \eta_q^T(\zeta_{2N-1}) + \eta_q^T(\zeta_{2N})}{2}.
\end{eqnarray*}


