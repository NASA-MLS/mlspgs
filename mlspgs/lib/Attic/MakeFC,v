2.67
log
@Uses Parser_Tables.wc to trigger two-phase build
@
text
@d16 1
a16 1
# "$Id: MakeFC,v 2.66 2014/01/29 21:01:28 pwagner Exp $"
d46 1
a46 1
CUSTOM_BUILDS := Hdf.f90 string_table.f90 ncep_dao.f90 Parser_Tables.f90
a87 26
	@@if [ -f Parser_Tables.wc ]; then \
        cd $(PLATFORMS)/$(MLSCONFG) && $(MAKE) Parser_Tables.o UNPREFXDPTHS="$(ADD2PATHS)" ;\
        fi
	@@if [ -f Parser_Tables.wc ]; then \
        cd $(PLATFORMS)/$(MLSCONFG) && $(MAKE) parser.o UNPREFXDPTHS="$(ADD2PATHS)" ;\
        fi
	@@if [ -f Parser_Tables.wc ]; then \
        rm -f $(PLATFORMS)/$(MLSCONFG)/libmls.a ;\
        cd $(PLATFORMS)/$(MLSCONFG) && $(MAKE) $(PROG) UNPREFXDPTHS="$(ADD2PATHS)" ;\
        return_status=`expr $$?` ; \
        if [ $$return_status != "0" ]; then \
		     exit 2 ; \
        elif [ "$(MARK_ALL_AS_UPTODATE)" != "no" ]; then \
		     $(MAKE) mark_all_as_uptodate \
           UNPREFXDPTHS="$(ADD2PATHS)" MARK_ALL_AS_UPTODATE= ;\
         fi; \
         cd ..; rm -f Parser_Tables.wc; \
        fi

parser.o: Parser_Tables.o
	@@cd $(PLATFORMS)/$(MLSCONFG) && $(MAKE) parser.o UNPREFXDPTHS="$(ADD2PATHS)" ;\
        

Parser_Tables.o:
	@@cd $(PLATFORMS)/$(MLSCONFG) && $(MAKE) Parser_Tables.o UNPREFXDPTHS="$(ADD2PATHS)" ;\
        
d183 3
@


