    IEEE_IS_FINITE_S = .FALSE.
    if( IEEE_Is_NaN_S(arg) ) RETURN
    if( IEEE_Is_Inf_io_S(arg) ) RETURN
    IEEE_IS_FINITE_S = .TRUE.
d80 1
