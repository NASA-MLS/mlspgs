    IEEE_IS_FINITE_D = .FALSE.
    if( IEEE_Is_NaN_D(arg) ) RETURN
    if( IEEE_Is_Inf_io_D(arg) ) RETURN
    IEEE_IS_FINITE_D = .TRUE.
