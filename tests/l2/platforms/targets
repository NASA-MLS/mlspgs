include ../Makefile.dep

# "$Id$"

# ========================================================================
ALLOBJS = $(OBJS)

PVM_PATH = ${PVM_ROOT}/lib/${PVM_ARCH}

libl2_sources = ../../../$(init_m_dir)/

libl2_f90 := $(wildcard $(libl2_sources)/*.f90)

libl2_objs := $(wildcard $(itmdir)/*.o)

l2_driver = MLSL2.o

# ========================================================================
libl2.a: $(libl2_objs)
	ar ru $@ $?
	ar d $@ $(itmdir)/$(l2_driver)

test: $(ALLOBJS) $(PVM_OBJS) libl2.a $(libdir)/libmls.a
	case "$(PVM_ROOT)" in \
		"") \
		echo "Building test without PVM support" ; \
		$(FC) -o test $(ALLOBJS) \
                      -L./ -ll2 \
                      -L${libdir} -lmls \
		-L${PGSTK} -lPGSTK \
        -L${HDFEOS} -lhdfeos \
		-L${HDF} -lmfhdf \
        -ldf \
        -lz \
        -ljpeg \
		-L${GCTP} -lGctp \
        $(l_specials) ; \
		;; \
		*) \
		echo "Building test with PVM support" ; \
		$(FC) -o test $(ALLOBJS) $(PVM_OBJS)  \
                      -L./ -ll2 \
                      -L${libdir} -lmls \
		-L${PGSTK} -lPGSTK \
        -L${HDFEOS} -lhdfeos \
		-L${HDF} -lmfhdf \
        -ldf \
        -lz \
        -ljpeg \
		-L${GCTP} -lGctp \
		-L${PVM_PATH} -lfpvm3 -lgpvm3 -lpvm3 \
        $(l_specials) ; \
		;; \
	esac 
# ========================================================================

clean:
	rm -f *.o *.mod test

tar:
	rm -f libtest.tgz
	tar hcvzf libtest.tgz * --exclude \*.o --exclude \*.mod --exclude test

# ========================================================================
# $Log$
#
