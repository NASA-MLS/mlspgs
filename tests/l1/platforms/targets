# This is the default name of the configure file
# It may be overridden for multiple platforms, special options, etc.
ifdef HOSTMLSCFILE
   MLSCFILE=$(HOSTMLSCFILE)
else
   MLSCFILE=.configure
endif

CONFDIR=../../..
ifdef NOCASCADE
include ../Makefile.nodep
else
include ../Makefile.dep
endif

# "$Id$"

# ========================================================================
# An automatically constructed Makefile
# This file was built by mlsconfigure
# by catenating three files:
# (1) .configure -- a file of mls settings: compiler, platform, etc.
# (2) MLSCONFG   -- a file of macros specific for the compiler.platform combo
#                   e.g., NAG.Sun
#                   these might be compiler switches, 
# (3) targets    -- a file of targets with instructions how to build them
#                    (except for .f90.o rules which are still in MLSCONFG)

# Other files referred to by means of "include" statements:
#   ../Makefile.dep -- dependencies among the primary Fortran modules

# Special areas:
# PVM
# If it is desired to link the executable with PVM support,
# the variables PVM_PATH, PVM_ARCH should be defined
# e.g. in .configure

# LAPACK
# If it is desired to link the executable with external LAPACK support,
# the variable LAPACK should be defined
# e.g. in the make statement: make LAPACK=/my_path/to_lapack_library
# If this is done, i.e., LAPACK is defined, then 

# BLAS
# If it is desired to link the executable with external BLAS support,
# the variable BLAS should be defined
# e.g. in the make statement: make BLAS=/my_path/to_BLAS_library
# If this is done, i.e., BLAS is defined, then blas_objs will
# be blank
# Otherwise, i.e. if BLAS is left undefined, then blas_objs will
# depend on LIB_BLAS:
# if LIB_BLAS is f95, then blas will be supported by f95 intrinsics

# ========================================================================
ifdef MLSINSTALLDIR
   INSTALLDIR:=$(MLSINSTALLDIR)
else
ifndef INSTALLDIR
   INSTALLDIR:=$(CONFDIR)/bin/$(MLSCONFG)
endif
endif

# ========================================================================

# where which_fftw.sh is stored
UTILDIR=../../../util
# This will filter out globbed file expansions that fail
# e.g., '*.f90 *.f' -> '*.f90" if there aren't any .f files
REECHO=$(UTILDIR)/reecho.sh
STATIC_LINK := $(shell echo $(LDOPTS) | grep -e "-static")

ALLOBJS = $(OBJS)

PROG_NAME=test

PVM_PATH = ${PVM_ROOT}/lib/${PVM_ARCH}

libl1_sources = ../../../$(init_m_dir)/

libl1_f90 := $(shell ${REECHO} $(libl1_sources)/*.f90)

libl1_objs := $(shell ${REECHO} $(itmdir)/*.o)

libl1_drivers := $(shell ${REECHO} $(itmdir)/MLSL1.o $(itmdir)/MLSL1G.o $(itmdir)/MLSL1log.o $(itmdir)/MLSL1T.o)

l1_driver = MLSL1.o

# "yes" is safer--
# in case modules have been deleted or excluded since the last build
# Nope--will need to think harder about what to do about excluded modules
delete_lib_first = no

ifdef PVM_ROOT
   pvm_linker_line=-L${PVM_PATH} -lfpvm3 -lgpvm3 -lpvm3
   pvm_message=Building $(PROG_NAME) with PVM support
   PVM_OBJS=
else
   pvm_linker_line=
   pvm_message=Building $(PROG_NAME) without PVM support
   PVM_OBJS=
endif

ifdef BLAS
ifdef LIB_BLAS
    blas_linker_line := $(shell ${REECHO} -dir ${BLAS} -prefixn=-l -lib ${LIB_BLAS})
    blas_linker_line := -L${BLAS} ${blas_linker_line}
else
   blas_linker_line=-L${BLAS} -lblas
endif
   blas_message=Building $(PROG_NAME) with externally-supplied BLAS
else
   blas_linker_line=
   blas_message=Building $(PROG_NAME) with internally-supplied BLAS
endif

ifdef LAPACK
ifdef LIB_LAPACK
    lapack_linker_line := $(shell ${REECHO} -dir ${LAPACK} -prefixn=-l -lib ${LIB_LAPACK})
    lapack_linker_line := -L${LAPACK} ${lapack_linker_line}
else
   lapack_linker_line=-L${LAPACK} -llapack
endif
   lapack_message=Building $(PROG_NAME) with externally-supplied LAPACK
else
   lapack_linker_line=
   lapack_message=Building $(PROG_NAME) with internally-supplied LAPACK
endif

utctotai_linker_line=-L${INSTALLDIR} -lutctotai
utctotai_message=Building mlsl2 with toolkitless utc to tai conversion

ifdef HDF5
ifeq ($(MLSPLAT),Sun)
   hdf5_linker_line=-L${HDF5} -lhdf5_fortran -lhdf5 -R${HDF5}
else
#   hdf5_linker_line=-L${HDF5} -lhdf5_fortran -lhdf5 -Xlinker -rpath=${HDF5} \
#    -lssl -lz
   hdf5_linker_line=-L${HDF5} -lhdf5_fortran -lhdf5 
   l_specials := $(l_specials) -lz
endif
ifdef HDFEOS5
   hdfeos5_linker_line=-L${HDFEOS5} -lhe5_hdfeos
ifeq ($(MLSF95),LF95)
   gcc_version=$(shell ${UTILDIR}/which_fftw.sh -gcc)
   static_object=$(shell ${UTILDIR}/which_fftw.sh -static)
ifdef STATIC_LINK
   l_specials=-lz -L/usr/lib/gcc-lib/i386-redhat-linux/${gcc_version} -lgcc \
     ${static_object}
else
   l_specials=-lz -L/usr/lib/gcc-lib/i386-redhat-linux/${gcc_version} -lgcc
endif
endif
ifeq ($(MLSF95),IFC)
   gcc_version=$(shell ${UTILDIR}/which_fftw.sh -gcc)
   l_specials=-lz -L/usr/lib/gcc-lib/i386-redhat-linux/${gcc_version} -lgcc
endif
else
   hdfeos5_linker_line=
endif
ifdef HDFVERSIONS
   he5lib_linker_line=-L../../he5lib/$(MLSCONFG) -lhe5
   he5lib_message=$(PROG_NAME) will support files with either hdf version
endif
   hdf5_message=Building $(PROG_NAME) with hdf5
else
   hdf5_linker_line=
   hdfeos5_linker_line=
   hdf5_message=Building $(PROG_NAME) without hdf5
endif

fftw_linker_line = $(shell ${UTILDIR}/which_fftw.sh ${FFTW_ROOT} ${FFTW_PREC})
# ========================================================================
libl1.a: $(libl1_objs)
ifeq ($(delete_lib_first),yes)
		rm -f $@
endif
	ar ru $@ $?
	ar d $@ $(l1_drivers)
#	ar d $@ $(itmdir)/$(l1_driver)

$(PROG_NAME): $(ALLOBJS) $(PVM_OBJS) libl1.a $(libdir)/libmls.a \
     $(CONFDIR)/$(MLSCFILE)
		@echo "$(pvm_message)"
		@echo "$(blas_message)"
		@echo "$(lapack_message)"
		@echo "$(hdf5_message)"
		@echo "$(he5lib_message)"
		@cat fftw_link_message | sed 's/mlsl3\[dm\]/'$(PROG_NAME)'/'
		$(FC) $(LDOPTS) -o $(PROG_NAME) $(ALLOBJS) $(PVM_OBJS)  \
        -L./ -ll1 \
        $(he5lib_linker_line) \
        -L${libdir} -lmls \
        $(utctotai_linker_line) \
		-L${PGSTK} -lPGSTK \
        -L${HDFEOS} -lhdfeos \
        $(hdfeos5_linker_line) \
		-L${HDF} -lmfhdf \
        -ldf \
        -lz \
        -ljpeg \
		-L${GCTP} -lGctp \
        $(pvm_linker_line) \
        $(blas_linker_line) \
        $(lapack_linker_line) \
        $(hdf5_linker_line) \
        $(fftw_linker_line) \
        $(l_specials) $(LAFTER) \

# ========================================================================

clean:
	rm -f *.o *.mod $(PROG_NAME)

tar:
	rm -f libtest.tgz
	tar hcvzf libtest.tgz * --exclude \*.o --exclude \*.mod --exclude $(PROG_NAME)

# ========================================================================

#	special options for compiling some modules--override .f90 rules
#  This is only needed when mis-using me to build sids/l1boa/sids_l1boa

Sd.o:
	$(FC) -c $(DUSTY) $(INC_PATHS) $(S)/Sd.f90 $(FAFTER)

