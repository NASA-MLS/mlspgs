include ../Makefile.dep

# "$Id$"

# ========================================================================
ALLOBJS = $(OBJS)

PVM_PATH = ${PVM_ROOT}/lib/${PVM_ARCH}

libl1_sources = ../../../$(init_m_dir)/

libl1_f90 := $(wildcard $(libl1_sources)/*.f90)

libl1_objs := $(wildcard $(itmdir)/*.o)

l1_driver = MLSL1.o

# ========================================================================
libl1.a: $(libl1_objs)
	ar ru $@ $?
	ar d $@ $(itmdir)/$(l1_driver)

test: $(ALLOBJS) $(PVM_OBJS) libl1.a $(libdir)/libmls.a
	case "$(PVM_ROOT)" in \
		"") \
		echo "Building test without PVM support" ; \
		$(FC) $(LDOPTS) -o test $(ALLOBJS) \
                      -L./ -ll1 \
                      -L${libdir} -lmls \
		-L${PGSTK} -lPGSTK \
        -L${HDFEOS} -lhdfeos \
		-L${HDF} -lmfhdf \
        -ldf \
        -lz \
        -ljpeg \
		-L${GCTP} -lGctp \
        $(l_specials) ; \
		;; \
		*) \
		echo "Building test with PVM support" ; \
		$(FC) $(LDOPTS) -o test $(ALLOBJS) $(PVM_OBJS)  \
                      -L./ -ll1 \
                      -L${libdir} -lmls \
		-L${PGSTK} -lPGSTK \
        -L${HDFEOS} -lhdfeos \
		-L${HDF} -lmfhdf \
        -ldf \
        -lz \
        -ljpeg \
		-L${GCTP} -lGctp \
		-L${PVM_PATH} -lfpvm3 -lgpvm3 -lpvm3 \
        $(l_specials) ; \
		;; \
	esac 
# ========================================================================

clean:
	rm -f *.o *.mod test

tar:
	rm -f libtest.tgz
	tar hcvzf libtest.tgz * --exclude \*.o --exclude \*.mod --exclude test

# ========================================================================
