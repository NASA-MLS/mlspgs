mlsl2: MLSL2.o

# This is the default name of the configure file
# It may be overridden for multiple platforms, special options, etc.
ifdef HOSTMLSCFILE
   MLSCFILE=$(HOSTMLSCFILE)
else
   MLSCFILE=.configure
endif

ifndef CASCADE
the_file := $(shell ${REECHO} Makefile.dep)
ifeq ($(strip $(the_file)),)
CASCADE = "yes"
endif
endif

ifndef CASCADE
include Makefile.dep
else
ifdef NOCASCADE
include ../Makefile.nodep
else
include ../Makefile.dep
endif
endif

record_file=newAifBdiff.out

MARKING_ARG=-f$(MARK_ALL_AS_UPTODATE) -s$(SKIP_PREREQ_DIRS)

# "$Id$"

# ========================================================================
# An automatically constructed Makefile
# This file was built by mlsconfigure
# by catenating three files:
# (1) .configure -- a file of mls settings: compiler, platform, etc.
# (2) MLSCONFG   -- a file of macros specific for the compiler.platform combo
#                   e.g., NAG.Sun
#                   these might be compiler switches, 
# (3) targets    -- a file of targets with instructions how to build them
#                    (except for .f90.o rules which are still in MLSCONFG)

# Other files referred to by means of "include" statements:
#   ../Makefile.dep -- dependencies among the primary Fortran modules
#   srclib/Makefile.dep -- dependencies among the shared Fortran modules

# Special areas:
# PVM
# If it is desired to link the executable with PVM support,
# the variables PVM_PATH, PVM_ARCH should be defined
# e.g. in .configure

# LAPACK
# If it is desired to link the executable with external LAPACK support,
# the variable LAPACK should be defined
# e.g. in the make statement: make LAPACK=/my_path/to_lapack_library
# If this is done, i.e., LAPACK is defined, then 

# BLAS
# If it is desired to link the executable with external BLAS support,
# the variable BLAS should be defined
# e.g. in the make statement: make BLAS=/my_path/to_BLAS_library
# If this is done, i.e., BLAS is defined, then blas_objs will
# be blank
# Otherwise, i.e. if BLAS is left undefined, then blas_objs will
# depend on LIB_BLAS:
# if LIB_BLAS is f95, then blas will be supported by f95 intrinsics

# PGSTK
# This variable is defined only if you will use the toolkit
# to build the level 2 software
# otherwise it is blank

# ========================================================================
#       The objects for the shared source files (in srclib)
# Include their dependencies
include $(srclib)/Makefile.dep

# Add them to L2OBJS
ALLOBJS = $(OBJS) $(srclib_objs)

TESTSDIR=$(CONFDIR)/tests

mlspack_dir=$(CONFDIR)/blas/$(MLSCONFG)

# Use the he5lib directory, he5libdir, if HDFVERSIONS != ''
he5libdir = $(CONFDIR)/he5lib/$(MLSCONFG)

ifdef MLSINSTALLDIR
   INSTALLDIR:=$(MLSINSTALLDIR)
else
ifndef INSTALLDIR
   INSTALLDIR:=$(CONFDIR)/bin/$(MLSCONFG)
endif
endif

PVM_PATH = ${PVM_ROOT}/lib/${PVM_ARCH}

ifdef PVM_ROOT
   pvm_linker_line=-L${PVM_PATH} -lfpvm3 -lgpvm3 -lpvm3
   pvm_message=Building mlsl2 with PVM support
else
   pvm_linker_line=
   pvm_message=Building mlsl2 without PVM support
   SnoopMLSL2.o: SnoopMLSL2.f90 $(OBJS) $(libdir)/libmls.a
endif

ifdef BLAS
ifdef LIB_BLAS
   blas_linker_line=-L${BLAS} -l${LIB_BLAS}
else
   blas_linker_line=-L${BLAS} -lblas
endif
   blas_message=Building mlsl2 with externally-supplied BLAS
else
   blas_linker_line=
   blas_message=Building mlsl2 with internally-supplied BLAS
endif

ifdef LAPACK
ifdef LIB_LAPACK
#   lapack_linker_line=-L${LAPACK} -l${LIB_LAPACK}
    lapack_linker_line := $(shell ${REECHO} -dir ${LAPACK} -prefixn=-l -lib ${LIB_LAPACK})
    lapack_linker_line := -L${LAPACK} ${lapack_linker_line}
else
   lapack_linker_line=-L${LAPACK} -llapack
endif
   lapack_message=Building mlsl2 with externally-supplied LAPACK
else
   lapack_linker_line=
   lapack_message=Building mlsl2 with internally-supplied LAPACK
endif

mlspack_linker_line=-L${mlspack_dir} -lmlspack
mlspack_message=Building mlsl2 with mlspack
fwdmdl_linker_line=-L${fwdmdldir} -lfwdmdl
fwdmdl_message=Building mlsl2 with forward model
cloud_linker_line=-L${clouddir} -lcloud
cloud_message=Building mlsl2 with cloud forward model
utctotai_linker_line=-L${INSTALLDIR} -lutctotai
utctotai_message=Building mlsl2 with toolkitless utc to tai conversion
mlsl2_prereqs := $(ALLOBJS) $(PVM_OBJS) \
    $(mlspack_dir)/libmlspack.a $(libdir)/libmls.a \
	 $(fwdmdldir)/libfwdmdl.a $(clouddir)/libcloud.a $(INSTALLDIR)/libutctotai.a\
    $(CONFDIR)/$(MLSCFILE) $(MODULES)

ifdef PGSTK
   tk_message=Building mlslib with toolkit
   tk_linker_line=-L${PGSTK} -lPGSTK
else
   tk_message=Building mlslib without toolkit; using SDPToolkitSubstitute
   tk_linker_line=
endif

ifdef HDF5
ifeq ($(MLSPLAT),Sun)
   hdf5_linker_line=-L${HDF5} -lhdf5_fortran -lhdf5 -R${HDF5}
else
#   hdf5_linker_line=-L${HDF5} -lhdf5_fortran -lhdf5 -Xlinker -rpath=${HDF5} \
#    -lssl -lz
   hdf5_linker_line=-L${HDF5} -lhdf5_fortran -lhdf5 
   l_specials := $(l_specials) -lz
endif
ifdef HDFEOS5
   hdfeos5_linker_line=-L${HDFEOS5} -lhe5_hdfeos
else
   hdfeos5_linker_line=
endif
ifdef HDFVERSIONS
   he5lib_linker_line=-L$(CONFDIR)/he5lib/$(MLSCONFG) -lhe5
   he5lib_message=mlsl2 will support files with either hdf version
   mlsl2_prereqs := $(mlsl2_prereqs) $(he5libdir)/libhe5.a
endif
   hdf5_message=Building mlsl2 with hdf5
else
   hdf5_linker_line=
   hdfeos5_linker_line=
   hdf5_message=Building mlsl2 without hdf5
endif

# ========================================================================
mlsl2: $(mlsl2_prereqs)
		@if [ "$(MODULES)" != "" -a "$(MARK_ALL_AS_UPTODATE)" = "yes" ]; then \
		 $(UTILDIR)/mark_as_uptodate.sh -M $(MAKE) -fyes ; \
		fi
		@echo "$(pvm_message)"
		@echo "$(blas_message)"
		@echo "$(lapack_message)"
		@echo "$(hdf5_message)"
		@echo "$(he5lib_message)"
		@echo "$(fwdmdl_message)"
		@echo "$(cloud_message)"
		@echo "$(utctotai_message)"
		$(FC) $(LDOPTS) -o mlsl2 $(ALLOBJS) \
        $(cloud_linker_line) \
        $(fwdmdl_linker_line) \
        $(he5lib_linker_line) \
                      -L${libdir} -lmls \
        $(utctotai_linker_line) \
		$(tk_linker_line) \
        -L${HDFEOS} -lhdfeos \
        $(hdfeos5_linker_line) \
		-L${HDF} -lmfhdf \
        -ldf \
        -lz \
        -ljpeg \
		-L${GCTP} -lGctp \
        $(pvm_linker_line) \
        $(blas_linker_line) \
        $(lapack_linker_line) \
        $(mlspack_linker_line) \
        $(hdf5_linker_line) \
        $(l_specials) $(LAFTER) \
		  
# ========================================================================

clean:
	rm -f *.o *.mod mlsl2

mark_all_as_uptodate:
		@if [ "$(MODULES)" != "" -a "$(MARK_ALL_AS_UPTODATE)" != "no" ]; then \
		 $(UTILDIR)/mark_as_uptodate.sh -T mlsl2 -M $(MAKE) $(MARKING_ARG) \
       $(libdir) $(fwdmdldir) $(clouddir) ; \
		fi

tar:
	rm -f l2.tgz
	tar hcvzf l2.tgz * --exclude \*.o --exclude \*.mod --exclude mlsl2

# ========================================================================

# Custom build commands for some modules
# (See also Abs.Linux, LF95.Linux, etc.)

# This uses the utility program init_gen to create two
# up-to-date prereqs for init_tables_module
$(INSTALLDIR)/init_gen: $(UTILDIR)/init_gen.f90
	$(UTILDIR)/build_f90_in_misc.sh -p init_gen \
	-d $(INSTALLDIR) -t $(TESTSDIR) -M $(MAKE) \
	-FC $(FC) -CC $(CC) -C $(MLSCFILE) \
   $(UTILDIR)/init_gen.f90

$(S)/field_parm.f9h $(S)/field_add.f9h: $(S)/field_names.txt $(INSTALLDIR)/init_gen
	sort -f $(S)/field_names.txt | $(INSTALLDIR)/init_gen \
          -f"last_Spectroscopy_Field + 1" -l field_last -pF_ \
          -j field_names.txt \
          $(S)/field_parm.f9h $(S)/field_add.f9h field_indices
#	rm -f temp
#	sed 's/<file_name_here>/field_names.txt/' $(S)/field_add.f9h > temp
#	mv temp $(S)/field_add.f9h
#	sed 's/<file_name_here>/field_names.txt/' $(S)/field_parm.f9h > temp
#	mv temp $(S)/field_parm.f9h

$(S)/lit_parm.f9h $(S)/lit_add.f9h: $(S)/lit_names.txt $(INSTALLDIR)/init_gen
	sort -f $(S)/lit_names.txt | $(INSTALLDIR)/init_gen \
          -f"last_Spectroscopy_Lit + 1" -l last_lit -pl_ \
          -j lit_names.txt \
          $(S)/lit_parm.f9h $(S)/lit_add.f9h lit_indices
#	rm -f temp
#	sed 's/<file_name_here>/lit_names.txt/' $(S)/lit_add.f9h > temp
#	mv temp $(S)/lit_add.f9h
#	sed 's/<file_name_here>/lit_names.txt/' $(S)/lit_parm.f9h > temp
#	mv temp $(S)/lit_parm.f9h

init_tables_module.o: $(S)/field_parm.f9h $(S)/field_add.f9h \
   $(S)/lit_parm.f9h $(S)/lit_add.f9h $(S)/init_tables_module.f90

