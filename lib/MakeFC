#special case:
#the 1st time through, before .configure exists yet,
#execute $(MLSBIN)/mlsconfigure to create .configure

#This file name is usu. Makefile but may be different;
#i.e., if you call are building this mls
#by calling make with a different Makefile name,
#say: make -f MakeFC
#then rename the Makefiles in /l2 and /lib also MakeFC

# "$Id$"

MakeFName = MakeFC

# where to store .configure
CONFDIR=..

# where configure and makemakedep.sh are stored
MLSBIN=../util

# where the platforms directory is
PLATFORMS = .

# where sources (but not OBJS) shared with l3, etc. are stored
srclib=../srclib

# where sources for the forward model are stored
libblas_sources=../blas

# where forward model objects and libfwdmdl.a are stored
libblas_objs=$(libblas_sources)/$(MLSCONFG)

# This is the default name of the configure file
# It may be overridden for multiple platforms, special options, etc.
ifdef HOSTMLSCFILE
   MLSCFILE=$(HOSTMLSCFILE)
else
   MLSCFILE=.configure
endif

# This will set our MLS platform, compiler. etc.
# w/o complaining if it does nor exist yet
-include $(CONFDIR)/$(MLSCFILE)

# All the implicit pattern-matching involving suffixes
# will be done in the uniquely-named sub-directories, not here--so
.SUFFIXES:

# This will filter out globbed file expansions that fail
# e.g., '*.f90 *.f' -> '*.f90" if there aren't any .f files
REECHO=$(MLSBIN)/reecho.sh

# This is in case tar doesn't summon GNU tar, you may still use it via
# something like
#    make -f MakeFC tar_sips TAR=/usr/local/gnu/bin/tar
TAR=tar

SHELL = /bin/sh

#--------------- Target definitions
#            (code sub-directories of lib)
# $PROG          -- automatic; built when target is not specified
# all            -- only libmls.a; same as $PROG
# $testdir       -- the sub-directory tests; contains programs testing lib
# $testsubdirs   -- all the sub-directories of tests
# alltests       -- same as $testsubdirs

#                           (functional)
# configure      -- runs mlsconfigure to (re)set compiler, platform, paths
#                  also (re)creates uniquely-named sub-sub-directories
#                  with custom Makefiles where *.o, *.mod, etc. built
# depends        -- runs makemakedep.sh to calculate dependencies
# mostlyclean    -- deletes uniquely-named sub-sub-directories
# clean          -- deletes only *.o, *.mod from sub-subs
# tar            -- creates a directory archive suitable for distribution
#

#----------------------------------------------------------
libblas_f90 := $(shell ${REECHO} $(libblas_sources)/*.c $(libblas_sources)/*.f $(libblas_sources)/*.f90)
PROG=libmls.a
#PROG=all

#In case this is called with "make libmls.a"
libmls.a:

#the subdirectory where testing programs were kept
#(outdated now)
testdir = tests

testsubdirs = $(testdir)/multiply $(testdir)/sparsify $(testdir)/test_cf_parser

#OMIT_SRCS := -d test_cholesky.f90 -d test_multiply.f90 \
#        -d test_sparsify.f90
#OMIT_SRCS := $(OMIT_SRCS) -d sbinom.f
OMIT_SRCS := $(OMIT) sbinom.f

ifdef HDFVERSIONS
   OMIT_SRCS := $(OMIT_SRCS) L2GPData.f90 MLSFiles.f90
endif

#PVM and PVMIDL require PVM_ROOT
ifdef PVM_ROOT
else
#   OMIT_SRCS := $(OMIT_SRCS) -d PVM.f90 -d PVMIDL.f90 -d QuantityPVM.f90
   OMIT_SRCS := $(OMIT_SRCS) PVM.f90 PVMIDL.f90 QuantityPVM.f90
endif

#Toolkit-free version requires SDPToolkitSubstitute
ifdef PGSTK
   OMIT_SRCS := $(OMIT_SRCS) SDPToolkitSubstitute.f90
endif

OMIT_PREFXD := $(shell ${REECHO} -prefix=-d $(OMIT_SRCS))

#NOCLEANING determines value of RECFG passed to mlsconfigure script
#RECFG determines whether changing .configure triggers deleting
#existing sub-directory, and thus recompiling every source file
#Set NOCLEANING to "yes" if you want to preserve existing compiled objects
#even when changing .configure file
ifdef NOCLEANING
   RECFG = -nd
endif

#----------------------- Build instructions

$(PROG): $(CONFDIR)/$(MLSCFILE) $(PLATFORMS)/$(MLSCONFG) \
         $(libblas_objs)/libmlspack.a
	@case "$(MLSCONFG)" in \
	"") \
		echo "Sorry--your configuration is not yet defined" ; \
		echo "Try make configure_full" ; \
		exit 2 ; \
		;; \
	*) \
		cd $(PLATFORMS)/$(MLSCONFG) && $(MAKE) $(PROG) ; \
		;; \
	esac 

$(PLATFORMS)/$(MLSCONFG)/$(PROG): $(PROG)
	@case "$(MLSCONFG)" in \
	"") \
		echo "Sorry--your configuration is not yet defined" ; \
		echo "Try make configure_full" ; \
		exit 2 ; \
		;; \
	*) \
		cd $(PLATFORMS)/$(MLSCONFG) && $(MAKE) $(PROG) ; \
		;; \
	esac 

$(libblas_objs)/libmlspack.a: $(libblas_f90) \
   $(libblas_objs)
	@if [ "$(NOHUNTING)" != "" ] ; then \
	   rm -f $(libblas_objs)/libmlspack.a ; \
	fi ; \
	$(MAKE) -f $(MakeFName) libmlspack.a -C $(libblas_sources)

.PHONY: configure depends clean alltests tar tarz targ mostlyclean \
	all libmls.a ghostbuster

tar:

configure:
	$(MLSBIN)/mlsconfigure -dc "$(CONFDIR)" -pc "$(PLATFORMS)" \
          -c "$(MLSF95)" -p "$(MLSPLAT)" -cf "$(MLSCFILE)" \
          $(RECFG)

$(CONFDIR)/$(MLSCFILE):
	$(MLSBIN)/mlsconfigure -dc "$(CONFDIR)" -pc "$(PLATFORMS)" \
          -c "$(MLSF95)" -p "$(MLSPLAT)" -cf "$(MLSCFILE)" \
          $(RECFG)

$(PLATFORMS)/$(MLSCONFG): $(CONFDIR)/$(MLSCFILE)
	$(MLSBIN)/mlsconfigure -dc "$(CONFDIR)" -pc "$(PLATFORMS)" \
          -c "$(MLSF95)" -p "$(MLSPLAT)" -cf "$(MLSCFILE)" -nc  \
          $(RECFG)

depends:
	$(MLSBIN)/makemakedep.sh $(OMIT_PREFXD) \
           ./machines/$(MLSCONFG) $(srclib)
#   Unfortunately, we are unable to use this currently because we can't yet
#   teach makemakedep.sh to selectively ignore files in other directories
#   the same way it can in its home directory
#   so adding bogus ones from $(libblas_sources)
#   will not have the desired effect
#   $(srclib) $(libblas_sources)

ghostbuster:
	$(MLSBIN)/ghostbuster.sh -lib $(OMIT_PREFXD) \
           $(PLATFORMS)/$(MLSCONFG) ./ $(srclib) ./machines/$(MLSCONFG)
           

mostlyclean:
	@echo "Cleaning directory $(MLSCONFG)" ; \
	if [ "$(MLSCONFG)" != "" ] ; then  \
		echo "Deleting $(MLSCONFG) files" ; \
		rm -f $(PLATFORMS)/$(MLSCONFG)/* ; \
	fi ; \
	if [ -d "$(PLATFORMS)/$(MLSCONFG)" ] ; then  \
		echo "Deleting $(MLSCONFG) directory" ; \
		rmdir $(PLATFORMS)/$(MLSCONFG) ; \
	fi ; \

#	echo "Cleaning $(testdir)"; \
#	$(MAKE) -f $(MakeFName) -C $(testdir) clean
	rm -f Make.dep.*

clean:
	@echo "Cleaning objects from directory $(MLSCONFG)" ; \
	if [ "$(MLSCONFG)" != "" ] ; then  \
		echo "Deleting $(MLSCONFG) files" ; \
		rm -f $(PLATFORMS)/$(MLSCONFG)/*.[ao] ; \
		rm -f $(PLATFORMS)/$(MLSCONFG)/*.mod ; \
	fi; \

#	echo "Cleaning objects from $(testdir)"; \
#	$(MAKE) -f $(MakeFName) -C $(testdir) clean
	rm -f Make.dep.*

tar:
	rm -f ../lib.tar
	@echo "tar-ing lib"; \
	$(TAR) hcvf ../lib.tar * --exclude CVS\
	--exclude Make.dep\* --exclude lib/NAG.\* --exclude lib/LF95.\*

tarz: tar
	@echo "... then gzipping it"; \
	cd ..; rm -f lib.tgz; gzip lib.tar; mv lib.tar.gz lib.tgz

targ:
	rm -f ../lib.tgz
	$(TAR) hcvzf ../lib.tgz * --exclude \*.o --exclude \*.mod

#================= For testing purposes only =============
#alltests: $(testsubdirs)
alltests:
	$(MAKE) -f $(MakeFName) -C $(testdir)

$(testsubdirs):
	echo "Making $@"
	$(MAKE) -f $(MakeFName) -C $@
