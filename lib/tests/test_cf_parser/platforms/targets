include ../Makefile.dep

# "$Id$"

# ========================================================================
#       The objects for the shared source files (in srclib)
srclib_objs = getCF_m.o tree_checker.o

#       The objects for the shared source files (in srclib)
itmlib_objs = init_tables_module.o

# Add them to OBJS
ALLOBJS = $(OBJS) $(srclib_objs) $(itmlib_objs)

# Assert their dependence on init_tables_module
# (Note: we are ignoring their dependence on other modules--may fix this later)
getCF_m.o: getCF_m.f90 tree_checker.o init_tables_module.o
tree_checker.o: tree_checker.f90 init_tables_module.o

# ========================================================================
test: $(ALLOBJS) $(libdir)/libmls.a
	$(FC) -o test $(ALLOBJS) \
                      -L$(libdir) -lmls \
	-L$(PGSTK) -lPGSTK  \

out.test: test $S/in.test
	./test -a $S/in.test out.test
# ========================================================================

clean:
	rm -f *.o *.mod test out.test

tar:
	rm -f test.tgz
	tar hcvzf test.tgz * --exclude \*.o --exclude \*.mod --exclude test

