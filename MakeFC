	@$(MAKE) -f $(MakeFName) install LEVELS=l1

install-l2:
	@$(MAKE) -f $(MakeFName) install LEVELS=l2

install-l3:
	@$(MAKE) -f $(MakeFName) install LEVELS="l3 l3m"

install-l3d:
	@$(MAKE) -f $(MakeFName) install LEVELS=l3

install-l3m:
	@$(MAKE) -f $(MakeFName) install LEVELS=l3m

