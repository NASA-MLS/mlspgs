! Probably only useful within Allocate_Deallocate.f90

    integer(c_intptr_t) :: Addr
    logical :: DoAlloc
    integer :: MyLow1, MyLow2, MyLow3, Status
    character(127) :: ERMSG
    target :: To_Allocate
    status = 0 ! In case we don't need to allocate
    myLow1 = 1; myLow2 = 1; myLow3 = 1
    if ( present(low1) ) myLow1 = low1
    if ( present(low2) ) myLow2 = low2
    if ( present(low3) ) myLow3 = low3
    doAlloc = .not. allocated(to_allocate)
    if ( .not. doAlloc ) doAlloc = lbound(to_allocate,1) /= myLow1 .or. &
                                 & lbound(to_allocate,2) /= myLow2 .or. &
                                 & lbound(to_allocate,3) /= myLow3 .or. &
                                 & ubound(to_allocate,1) /= dim1 .or. &
                                 & ubound(to_allocate,2) /= dim2 .or. &
                                 & ubound(to_allocate,3) /= dim3
    if ( doAlloc ) then
      call deallocate_Test ( To_Allocate, ItsName, ModuleName )
      allocate ( To_Allocate(myLow1:dim1,myLow2:dim2,myLow3:dim3), &
        & STAT=status, ERRMSG=ermsg )
      addr = 0
      if ( status == 0 ) then
        if ( size(to_allocate) > 0 ) &
          & addr = transfer ( c_loc(to_allocate(myLow1,myLow2,myLow3)), addr )
      end if
      call test_allocate ( status, moduleName, ItsName, &
        & (/myLow1,myLow2,myLow3/), (/dim1,dim2,dim3/), &
        & bytes(to_allocate), ermsg, addr )
      if ( mod(trackallocates,2) > 0 ) &
        & call trackAllocate ( to_allocate, itsName, moduleName )
    end if
    if ( status == 0 ) then
      if ( present(fill) ) then
        to_allocate = fill
      else if ( clearOnAllocate ) then
        to_allocate = default
      end if
    end if

