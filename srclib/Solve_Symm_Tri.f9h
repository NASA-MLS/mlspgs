! subroutine Solve_Symm_Tri ( DIAG, H, Z, B )

    ! Solve A b = z all at once -- don't return the factors.
    ! DIAG(1:n) is the diagonal of A
    ! H(1:n-1) is the super- and subdiagonal, H(n) is the corner
    ! Z(1:n) is the RHS
    ! B(1:n) is output

    real(rk), intent(in) :: DIAG(:), H(:), Z(:)
    real(rk), intent(out) :: B(:)

    real(rk), dimension(size(diag))   :: D ! Inverse of diagonal of L
                                           ! Subdiagonal of L is H(1:n-2)
                                           !   and R(n-1)
    real(rk), dimension(size(diag)-1) :: Y ! Solution of L y = z
                                           ! Diagonal of U is 1
    real(rk), dimension(size(diag)-2) :: U ! Superdiagonal of U

    integer :: K, N

    n = size(diag)

    ! LU factor A and solve L y = z
    d(1) = 1.0 / diag(1)
    y(1) = z(1) * d(1)
    do k = 2, n-1
      u(k-1) = h(k-1) * d(k-1)
      d(k) = 1.0 / ( diag(k) - h(k-1) * u(k-1) )
      y(k) = ( z(k) - h(k-1) * y(k-1) ) * d(k)
    end do

    ! Solve U b = z
    b(n) = ( z(n) - h(n-1) * y(n-1) ) * d(n) ! y(n), if we had computed it
    do k = n-1, 1, -1
      b(k) = y(k) - u(k) * b(k+1)
    end do

! end subroutine Solve_Symm_Tri

