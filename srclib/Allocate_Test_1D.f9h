! Probably only useful within Allocate_Deallocate.f90

    integer(c_intptr_t) :: Addr
    logical :: DoAlloc
    integer :: MyLow, Status
    character(127) :: ERMSG
    status = 0 ! In case we don't need to allocate
    myLow = 1
    if ( present(lowBound) ) myLow = lowBound
    doAlloc = .not. associated(to_allocate)
    if ( .not. doAlloc ) doAlloc = size(to_allocate,1) /= dim1 - myLow + 1
    if ( doAlloc ) then
      call deallocate_Test ( To_Allocate, ItsName, ModuleName )
      allocate ( To_Allocate(myLow:dim1), STAT=status, ERRMSG=ermsg )
      addr = 0
      if ( status == 0 ) then
        if ( size(to_allocate) > 0 ) addr = transfer ( c_loc(to_allocate(myLow)), addr )
      end if
      call test_allocate ( status, moduleName, ItsName, &
        & (/myLow/), (/dim1/), bytes(to_allocate), ermsg, addr )
      if ( mod(trackallocates,2) > 0 ) &
        & call trackAllocate ( to_allocate, itsName, moduleName )
    else
      to_allocate(myLow:) => to_allocate
    end if
    if ( status == 0 ) then
      if ( present(fill) ) then
        to_allocate = fill
      else if ( clearOnAllocate ) then
        to_allocate = default
      end if
    end if

